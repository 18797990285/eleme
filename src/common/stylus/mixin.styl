border-1px($color) // $color为参数
  position: relative
  &:after
    /* after相对于border绝对定位 */
    display: block
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-top: 1px solid $color
    content: ' '

border-none()
  &:after
    display: none

// 处理图片dpr 2x  3x
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")